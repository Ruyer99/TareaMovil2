<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaMovil2.Views.PageResultado">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#f8e1dd">            <Label Text="{Binding Resultado}"                   FontSize="30" TextColor="Black"                   VerticalOptions="CenterAndExpand"                   HorizontalOptions="CenterAndExpand" x:Name="LbResultado"/>            <Label Text="{Binding numero1}"                   FontSize="50" Margin="0,1,0,0" TextColor="Black"                VerticalOptions="CenterAndExpand"                 HorizontalOptions="CenterAndExpand" x:Name="Lbnumero1" />            <Label Text="{Binding numero2}"                VerticalOptions="CenterAndExpand"                 HorizontalOptions="CenterAndExpand" x:Name="Lbnumero2" />        </StackLayout>

    </ContentPage.Content>
</ContentPage>